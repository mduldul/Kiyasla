function isc_timeJump(){if(iscGlobal.imgCount==iscGlobal.imagesLength){iscGlobal.imgCount=1;iscGlobal.current=0;var n=iscGlobal.cObj.width()*iscGlobal.imagesLength-iscGlobal.cObj.width();$(".internal_swipe_container").animate({left:"+="+n},400,function(){$("#count_container li").removeClass("current");$("#count_"+iscGlobal.current).addClass("current")})}else iscGlobal.imgCount++,$(".internal_swipe_container").animate({left:"-="+iscGlobal.cObj.width()},400,function(){iscGlobal.current=iscGlobal.current+1;$("#count_container li").removeClass("current");$("#count_"+iscGlobal.current).addClass("current")});iscGlobal.autoplay&&setTimeout("isc_timeJump()",iscGlobal.autoplayTimer)}function isc_jumpTo(n){var t,i,r;iscGlobal.autoplay=!1;$("#swipe_nav_next,#swipe_nav_prev").css("display","none");t=n>iscGlobal.current?n-iscGlobal.current:iscGlobal.current-n;i=iscGlobal.cObj.width()*t;r=n>=iscGlobal.current?"-=":"+=";iscGlobal.current=n;$(".internal_swipe_container").animate({left:r+i},400,function(){$("#count_container li").removeClass("current");$("#count_"+iscGlobal.current).addClass("current");iscGlobal.imgCount=n+1})}function isc_posCount(){$("#count_container").css({left:iscGlobal.x+"px",top:iscGlobal.y+iscGlobal.cObj.height()-6+"px"})}var iscGlobal={};iscGlobal.x=0;iscGlobal.y=0;iscGlobal.c=0;iscGlobal.ct=0;iscGlobal.imgCount=1;iscGlobal.current=0;iscGlobal.autoplay=!1;iscGlobal.autoplayTimer=3e3;$(window).resize(function(){iscGlobal.x=iscGlobal.cObj.offset().left;iscGlobal.y=iscGlobal.cObj.offset().top;iscGlobal.c=iscGlobal.x+iscGlobal.cObj.width()/2;iscGlobal.ct=iscGlobal.y+iscGlobal.cObj.height()/2;isc_posCount()}),function(n){n.fn.isc=function(t){for(t.autoplay&&(iscGlobal.autoplay=!0,t.autoplayTimer>0&&(iscGlobal.autoplayTimer=t.autoplayTimer)),iscGlobal.cObj=n(this),iscGlobal.current=0,iscGlobal.imgCount=1,iscGlobal.imagesLength=t.imgArray.length,iscGlobal.cObj.css("overflow","hidden"),iscGlobal.cObj.append('<div class="internal_swipe_container"><\/div>'),i=0;i<t.imgArray.length;i++)n(".internal_swipe_container").append('<div class="jq_swipe_image" id="swipe_div_'+i+'"><img id="swipe_img_'+i+'" src="'+t.imgArray[i]+'" border="0"><\/div>'),n("#internal_swipe_container").css({width:iscGlobal.cObj.width(),height:iscGlobal.cObj.height(),overflow:"hidden"}),n(".jq_swipe_image").css({height:iscGlobal.cObj.height()+"px","background-color":"#FFF"}),n("#swipe_img_"+i).css("visibility","hidden"),n("#swipe_img_"+i).load(function(){var i,r,u,t,f,e;n(this).parent("div").css({"background-image":"url()","background-color":"inherit"});n(this).css({visibility:"visible",position:"relative"});i=n(this).width();r=n(this).height();iscGlobal.cObj.width()>iscGlobal.cObj.height()?i>r?(t=i/r,n(this).css({width:iscGlobal.cObj.width()+"px",height:Math.round(iscGlobal.cObj.width()*(1/t))}),u=Math.round(iscGlobal.cObj.width()*(1/t)),u<iscGlobal.cObj.height()&&(t=r/i,n(this).css({height:iscGlobal.cObj.height(),width:Math.round(iscGlobal.cObj.height()*(1/t))}))):(t=r/i,n(this).css({height:iscGlobal.cObj.height(),width:Math.round(iscGlobal.cObj.height()*(1/t))})):(t=r/i,n(this).css({height:iscGlobal.cObj.height(),width:Math.round(iscGlobal.cObj.height()*(1/t))}));n(this).width()>iscGlobal.cObj.width()&&(f=(n(this).width()-iscGlobal.cObj.width())/2,n(this).css("left","-"+f+"px"));n(this).height()>iscGlobal.cObj.height()&&(e=(n(this).height()-iscGlobal.cObj.height())/2,n(this).css("top","-"+e+"px"))});for(n(".internal_swipe_container").css("width",n(this).width()*t.imgArray.length+"px"),n(".jq_swipe_image").css({float:"left","text-align":"center",overflow:"hidden",width:n(this).width()+"px"}),iscGlobal.x=iscGlobal.cObj.offset().left,iscGlobal.y=iscGlobal.cObj.offset().top,iscGlobal.c=iscGlobal.x+iscGlobal.cObj.width()/2,iscGlobal.ct=iscGlobal.y+iscGlobal.cObj.height()/2,iscGlobal.cObj.append('<div id="swipe_nav_prev" class="trans"><div><\/div><\/div>'),iscGlobal.cObj.append('<div id="swipe_nav_next" class="trans"><div><\/div><\/div>'),n("#swipe_nav_next").bind("click",function(){iscGlobal.autoplay=!1;iscGlobal.imgCount++;iscGlobal.imgCount==t.imgArray.length&&n("#swipe_nav_next").css("display","none");n(".internal_swipe_container").animate({left:"-="+iscGlobal.cObj.width()},400,function(){iscGlobal.current=iscGlobal.current+1;n("#count_container li").removeClass("current");n("#count_"+iscGlobal.current).addClass("current")})}),n("#swipe_nav_prev").bind("click",function(){iscGlobal.autoplay=!1;iscGlobal.imgCount--;iscGlobal.imgCount==1&&n("#swipe_nav_prev").css("display","none");n(".internal_swipe_container").animate({left:"+="+iscGlobal.cObj.width()},400,function(){iscGlobal.current=iscGlobal.current-1;n("#count_container li").removeClass("current");n("#count_"+iscGlobal.current).addClass("current")})}),n("body").append('<ul id="count_container" class="trans"><\/ul>'),i=0;i<t.imgArray.length;i++)n("#count_container").append('<li id="count_'+i+'" onclick="isc_jumpTo('+i+');" class="counter"><\/li>');n("#count_"+iscGlobal.current).addClass("current");n(".counter").css({width:iscGlobal.cObj.width()/t.imgArray.length+"px"});isc_posCount();n(document).mousemove(function(i){iscGlobal.mX=i.pageX;iscGlobal.mY=i.pageY;var r=iscGlobal.y+(iscGlobal.cObj.outerHeight(!0)-6),u=iscGlobal.x+iscGlobal.cObj.outerWidth(!0);iscGlobal.mY>iscGlobal.y&&iscGlobal.mY<r&&iscGlobal.mX>iscGlobal.x&&iscGlobal.mX<u?iscGlobal.mX<iscGlobal.c?iscGlobal.imgCount>1&&(n("#swipe_nav_next").css("display","none"),n("#swipe_nav_prev").css({display:"block",height:iscGlobal.cObj.outerHeight(!0)-6+"px",top:iscGlobal.y+"px",left:iscGlobal.x+"px",width:iscGlobal.cObj.width()*.2+"px"})):iscGlobal.mX>iscGlobal.c&&iscGlobal.imgCount<t.imgArray.length&&(n("#swipe_nav_prev").css("display","none"),n("#swipe_nav_next").css({display:"block",height:iscGlobal.cObj.outerHeight(!0)-6+"px",top:iscGlobal.y+"px",left:iscGlobal.x+iscGlobal.cObj.width()-iscGlobal.cObj.width()*.2+"px",width:iscGlobal.cObj.width()*.2+"px"})):n("#swipe_nav_next,#swipe_nav_prev").css("display","none")});iscGlobal.autoplay&&setTimeout("isc_timeJump()",iscGlobal.autoplayTimer)}}(jQuery)